<?xml version="1.0" encoding="utf-8"?>

<configuration>
    <configSections>
        <section name="quartz" type="System.Configuration.NameValueFileSectionHandler" />
    </configSections>

    <quartz>
        <add key="quartz.scheduler.instanceName" value="SOC.Scheduler.Instance" />
        <add key="quartz.threadPool.type" value="Quartz.Simpl.SimpleThreadPool, Quartz" />
        <add key="quartz.threadPool.threadCount" value="10" />
        <add key="quartz.threadPool.threadPriority" value="Normal" />
        <!-- <add key="quartz.plugin.xml.type" value="Quartz.Plugin.Xml.XMLSchedulingDataProcessorPlugin, Quartz.Plugins" /> -->
        <!-- <add key="quartz.plugin.xml.fileNames" value="~/quartzDefaultJobs.xml" /> -->

        <add key="quartz.jobStore.type" value="Quartz.Impl.AdoJobStore.JobStoreTX, Quartz" />
        <add key="quartz.jobStore.misfireThreshold" value="60000" />
        <add key="quartz.jobStore.dataSource" value="scheduler" />
        <add key="quartz.jobStore.driverDelegateType" value="Quartz.Impl.AdoJobStore.PostgreSQLDelegate, Quartz" />
        <add key="quartz.jobStore.lockHandler.type" value="Quartz.Impl.AdoJobStore.UpdateLockRowSemaphore, Quartz" />
        <add key="quartz.jobStore.tablePrefix" value="QRTZ_" />

        <add key="quartz.dataSource.scheduler.connectionString"
             value="Host=dev.local;Username=postgres;Password=admin01!;Database=scheduler;Pooling=true;MaxPoolSize=90" />
        <add key="quartz.dataSource.scheduler.provider" value="Npgsql" />
        <add key="quartz.serializer.type" value="json" />

        <add key="quartz.plugin.recentHistory.type"
             value="Quartz.Plugins.RecentHistory.ExecutionHistoryPlugin, Quartz.Plugins.RecentHistory" />
        <add key="quartz.plugin.recentHistory.storeType"
             value="Quartz.Plugins.RecentHistory.Impl.InProcExecutionHistoryStore, Quartz.Plugins.RecentHistory" />
    </quartz>
</configuration>